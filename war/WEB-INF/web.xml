<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>SRMNotifier</servlet-name>
		<servlet-class>notifier.SRMNotifierServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SRMNotifier</servlet-name>
		<url-pattern>/notifier</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SRMUpdater</servlet-name>
		<servlet-class>notifier.SRMUpdaterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SRMUpdater</servlet-name>
		<url-pattern>/updater</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
